<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Styles provided by the user -->
    <style name="DashboardNavButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:backgroundTint">@color/blue_accent</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="StatCard.Base">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="StatCard.Red" parent="StatCard.Base">
        <item name="android:background">@color/red_stat_bg</item>
    </style>

    <style name="StatCard.Orange" parent="StatCard.Base">
        <item name="android:background">@color/orange_stat_bg</item>
    </style>

    <style name="StatCard.Blue" parent="StatCard.Base">
        <item name="android:background">@color/blue_stat_bg</item>
    </style>

    <style name="StatCard.Green" parent="StatCard.Base">
        <item name="android:background">@color/green_stat_bg</item>
    </style>

    <style name="AlertCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/dark_card_bg</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginVertical">4dp</item>
    </style>

    <style name="StatusBadge.Base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="StatusBadge.Red" parent="StatusBadge.Base">
        <item name="android:background">@color/red_badge</item>
    </style>

    <style name="StatusBadge.Blue" parent="StatusBadge.Base">
        <item name="android:background">@color/blue_badge</item>
    </style>
</resources>
